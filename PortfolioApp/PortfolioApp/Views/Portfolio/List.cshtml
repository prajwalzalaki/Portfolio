@model IEnumerable<Lib.Core.Model.Portfolio>

@{
    ViewData["Title"] = "List";
}

<h1 style="color:crimson">List of Investors</h1>

<table class="table">
    <thead>
        <tr>
            <th class="align-middle">
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th class="align-middle">
                @Html.DisplayNameFor(model => model.ProfilePicture)
            </th>
            <th class="align-middle">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th class="align-middle">
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th class="align-middle">
                @Html.DisplayNameFor(model => model.ContactNo)
            </th>
            <th class="align-middle">
                @Html.DisplayNameFor(model => model.TotalInvestment)
            </th>
            <th class="align-middle">
                @Html.DisplayNameFor(model => model.Gender)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td class="align-middle">
                <img class="rounded-circle" src="@item.ProfilePicture" alt="@item.Name" style="max-width: 150px" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContactNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalInvestment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td class="align-middle">
                <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Edit</a> |
                <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Details</a> |
                <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div style="position:fixed;right:25px;bottom:25px;" class="text-white">
    <a asp-controller="Portfolio" asp-action="Create" class="btn btn-success">
        <i class="bi bi-plus-circle"></i>Add New
    </a>
</div>
